---
import Layout from "../../layouts/Layout.astro";
import VideoEmbed from "../../components/VideoEmbed.astro";
import Faqs from "../../components/Faqs.astro";
import Testimonios from "../../components/Testimonios.astro";
import Nosotros from "../../components/opt-in/Nosotros.astro";
import Content from "../../components/Content.astro";
import Benefits from "../../components/Benefits.astro";

const calendly = Astro.props.calendly;
const path = Astro.url.pathname;
---

<Layout>
  <div class="relative overflow-clip">
    <!-- <div
      class="absolute blur-[60px] md:blur-[350px] size-[832px] rounded-full bg-[#151F57]/70 -left-[310px] -top-[400px]"
    >
    </div>
    <div
      class="absolute blur-[60px] md:blur-[350px] size-[832px] rounded-full bg-[#151F57]/70 -right-[310px] top-[600px]"
    >
    </div> -->
    <section class="pb-[60px] pt-[40px] md:py-[60px] relative px-4">
      <div class="max-w-[900px] mx-auto">
        <img
          class="h-[30px] md:h-[50px] object-contain mx-auto mb-8"
          src="/images/escuela-de-yoguis-emprendedores-logo.png"
          alt="Bio Founders"
        />
        <div
          class="flex gap-4 flex-col-reverse md:flex-row items-center justify-center mb-4"
        >
          <p
            class="text-white/80 font-medium text-[16px] md:text-[20px] text-center"
          >
            +170 yoga teachers trabajando con nosotros
          </p>
          <img
            class="h-[15px] md:h-[17px]"
            src="/images/banderas.webp"
            alt="Banderas"
          />
        </div>
        {(!path.includes('/b') && !path.includes('/home')) && (
				<h1 class="text-[22px] text-white leading-[26px] md:text-[44px] font-bold md:leading-[42px] text-center">
					Sumamos entre <span class="--highlight">10 y 40 alumnos nuevos</span> por mes para tus
					clases de Yoga con nuestro Sistema de Anuncios
				</h1>
			)}
			{path.includes('/b') && (
				<h1 class="text-[22px] text-white leading-[26px] md:text-[44px] font-bold md:leading-[42px] text-center">
					Sumamos entre <span class="--highlight">10 y 40 alumnos nuevos</span> por mes para tus clases 
					de Yoga Presenciales con un Sistema Simple
				</h1>
			)}
			{path.includes('/home') && (
				<h1 class="text-[22px] text-white leading-[26px] md:text-[44px] font-bold md:leading-[42px] text-center">
					Sumamos entre <span class="--highlight">20 y 40 alumnos nuevos</span> por mes para tus clases 
					de Yoga Presenciales con un Sistema Simple
				</h1>
			)}
        <!-- <p class="text-white/80 font-medium text-[16px] md:text-[20px] text-center mt-4 mb-8">Mira el video y descubrí cómo lo hacemos</p> -->
        <div class="mt-8">
          <p
            class="flex text-[18px] gap-2 p-2 items-center justify-center text-center bg-[#0c7eff] text-white font-semibold rounded-tr-lg rounded-tl-lg"
          >
            <svg
              class="size-[20px] fill-white"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 576 512"
              ><!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.-->
              <path
                d="M301.1 34.8C312.6 40 320 51.4 320 64l0 384c0 12.6-7.4 24-18.9 29.2s-25 3.1-34.4-5.3L131.8 352 64 352c-35.3 0-64-28.7-64-64l0-64c0-35.3 28.7-64 64-64l67.8 0L266.7 40.1c9.4-8.4 22.9-10.4 34.4-5.3zM425 167l55 55 55-55c9.4-9.4 24.6-9.4 33.9 0s9.4 24.6 0 33.9l-55 55 55 55c9.4 9.4 9.4 24.6 0 33.9s-24.6 9.4-33.9 0l-55-55-55 55c-9.4 9.4-24.6 9.4-33.9 0s-9.4-24.6 0-33.9l55-55-55-55c-9.4-9.4-9.4-24.6 0-33.9s24.6-9.4 33.9 0z"
              ></path></svg
            >
            Clic para activar sonido
          </p>
          <VideoEmbed />
        </div>
        <div class="mt-8 w-full md:w-fit mx-auto">
          <button
            class="open-popup cursor-pointer block w-full md:w-fit font-bold text-white border-3 border-white/30 text-center py-5 px-12 rounded-full bg-[#FF904D]"
            >Hace clic para reservar tu lugar »</button
          >
          <p class="text-white/80 text-center mt-4">¡Ultimas plazas del mes!</p>
        </div>
      </div>
    </section>

    <Testimonios />
    <Nosotros />
    <Content />
    <Benefits />

    <p
      class="text-white/80 text-[14px] md:text-[16px] text-center py-[100px] pb-8"
    >
      © Escuela de yoguis emprendedores 2025. Todos los derechos reservados.
    </p>

    <script is:inline>
